server_host = localhost
search_base = ou={{inhabitants}},dc={{hostname}}.local
query_filter = (&(mail=%s)(objectClass=CourierMailAccount))
result_attribute = homeDirectory
cache = no
bind = yes
bind_dn = uid=postfix,ou=services,dc={{hostname}}.local
bind_pw = {{postfix_password}}
start_tls = yes
tls_cert = /etc/ssl/certs/{{domain}}.crt
tls_key = /etc/ssl/private/{{domain}}.key
version = 3
